server {
  listen <%= node['nginx']['port'] || '80' %>;
  server_name <%= @domain_names.join(' ') %>;
  root /u/apps/<%= @name %>/current/public;

  try_files $uri/index.html $uri.html $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://<%= @name %>;
  }

}

<% if @enable_ssl %>

server {
  listen 443 ssl;

  ssl_certificate /u/apps/<%= @name %>/shared/config/certificate.crt;
  ssl_certificate_key /u/apps/<%= @name %>/shared/config/certificate.key;

  server_name <%= @domain_names.join(' ') %>;

  root /u/apps/<%= @name %>/current/public;

  location / {
    try_files $uri @app;
  }

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_redirect off;

    proxy_pass http://<%= @name %>;
  }

}

<% end %>

upstream <%= @name %> {
  server unix:/u/apps/<%= @name %>/current/tmp/sockets/unicorn.sock;
}